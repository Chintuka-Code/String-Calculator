{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:sonarjs/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "sonarjs"],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "sonarjs/no-duplicate-string": "warn",
    "sonarjs/no-small-switch": "warn"
  },
  "ignorePatterns": ["dist/**/*"]
}
